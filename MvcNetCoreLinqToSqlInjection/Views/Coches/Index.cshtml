@model Coche
<h1>@Model.Marca - @Model.Modelo</h1>
<img src="~/images/@Model.Imagen" style="width:150px; height:150px;"/>
<h2 class="text-success">Velocidad Actual: @Model.Velocidad</h2>
<h4 class="text-warning">Velocidad maxima: @Model.VelocidadMaxima</h4>
<form method="post">
    <button type="submit" name="accion" value="acelerar" class="btn btn-primary">Acelerar</button>
    <button type="submit" name="accion" value="frenar" class="btn btn-secondary">Frenar</button>
</form>